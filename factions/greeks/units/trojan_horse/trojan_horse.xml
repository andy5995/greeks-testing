		<sight value="22" />
		<time value="200" />
		<multi-selection value="true"/>
		<uniform-selection value="true"/>
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties/>
		<light enabled="false"/>
		<damage-particles value="false"/>
		<rotationAllowed value="true" />
