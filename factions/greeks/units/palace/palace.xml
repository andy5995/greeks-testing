<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="5" />
		<height value="3" />
		<ai-build-size value="7"/>
		<max-hp value="6000" regeneration="0"/>
		<max-ep value="0" />
		<armor value="0" />
		<armor-type value="stone"/>
		<sight value="15" />
		<time value="200" />
		<multi-selection value="true"/>
		<uniform-selection value="true"/>
		<cellmap value="true">
			<row value="11001"/>
			<row value="00011"/>
			<row value="00000"/>
			<row value="10000"/>
			<row value="11001"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="true" red="0.8" green="0.8" blue="0.5"/>
		<rotationAllowed value="true" />
		<unit-requirements/>
		<upgrade-requirements>
			<upgrade name="advanced_architecture"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="100" />
			<resource name="stone" amount="100" />
			<resource name="wood" amount="100" />
		</resource-requirements>
		<resources-stored>
			<resource name= "gold" amount="800"/>
			<resource name= "stone" amount="500"/>
		</resources-stored>
		<image path="images/palace.bmp" />
		<image-cancel path="../archer/images/tech_cancel.bmp"/>
		<meeting-point value="true" image-path="../barracks/images/meeting_point.bmp"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</command-sounds>
	</parameters>

	<!-- *** skills *** -->
	<skills>

		<skill>
			<type value="stop" />
			<name value="stop_skill"/>
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="100" />
			<animation path="models/palace.g3d" />
			<sound enabled="false" />
		</skill>

		<skill>
			<type value="be_built" />
			<name value="be_built_skill"/>
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="300" />
			<animation path="models/palace_build.g3d" />
			<sound enabled="false" />
		</skill>

		<skill>
			<type value="produce" />
			<name value="produce_skill"/>
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="300" />
			<animation path="models/palace.g3d" />
			<sound enabled="false" />
		</skill>

		<skill>
			<type value="die" />
			<name value="die_skill"/>
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="300" />
			<animation path="models/palace_die.g3d" />
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="glow_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall1.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall2.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall3.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall4.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall5.wav"/>
			</sound>
			<fade value="false"/>
		</skill>

		<skill>
			<type value="upgrade" />
			<name value="upgrade_skill"/>
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="150" />
			<animation path="models/palace.g3d" />
			<particles value="false"/>
			<sound enabled="false"/>
			<particles value="true">
				<particle-file path="../../particles/upgrade_particles.xml" />
			</particles>
		</skill>

	</skills>

	<!-- *** commands *** -->
	<commands>

		<command>
			<type value="upgrade"/>
			<name value="receive_royal_blessing"/>
			<image path="../../upgrades/royal_blessing/images/training_field.bmp" />
			<unit-requirements />
			<upgrade-requirements/>
			<upgrade-skill value="upgrade_skill"/>
			<produced-upgrade name="royal_blessing"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="build_chariot"/>
			<image path="../chariot/images/battle_machine.bmp"/>
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="chariot"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="build_battering_ram"/>
			<image path="../battering_ram/images/br.bmp"/>
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="battering_ram"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="produce_alexander" />
			<image path="../alexander/images/archmage.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="alexander"/>
		</command>

	</commands>
