<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="3" />
		<height value="2" />
		<ai-build-size value="6"/>
		<max-hp value="6000" regeneration="0"/>
		<max-ep value="0" />
		<armor value="0" />
		<armor-type value="stone"/>
		<sight value="5" />
		<time value="100" />
		<multi-selection value="true"/>
		<uniform-selection value="true"/>
		<cellmap value="true">
			<row value="101"/>
			<row value="000"/>
			<row value="101"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties/>
		<light enabled="false" />
		<rotationAllowed value="true" />
		<unit-requirements/>
		<upgrade-requirements>
			<upgrade name="advanced_architecture"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="200" />
			<resource name="stone" amount="200" />
		</resource-requirements>
		<resources-stored/>
		<image path="images/technodrome.bmp"/>
		<image-cancel path="../archer/images/tech_cancel.bmp"/>
		<meeting-point value="true" image-path="../barracks/images/meeting_point.bmp"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</command-sounds>
	</parameters>

	<!-- *** skills *** -->
	<skills>

		<skill>
			<name value="be_built_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/temple_build.g3d"/>
			<sound enabled="false"/>
			<type value="be_built"/>
		</skill>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="100"/>
			<animation path="models/temple.g3d"/>
			<sound enabled="false"/>
			<attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="5"/>
				<target value="faction">
					<unit-type name="archer" />
					<unit-type name="artemis" />
					<unit-type name="chicken" />
					<unit-type name="hoplite" />
					<unit-type name="engineer" />
					<unit-type name="peltast" />
					<unit-type name="psiloi" />
					<unit-type name="slave" />
				</target>
				<max-hp value="0" regeneration="3"/>
				<max-ep value="0"/>
				<sight value="0"/>
				<attack-range value="0"/>
				<armor value="0"/>
				<production-speed value="0"/>
				<particles value="true">
					<affected-particle-file path="../../particles/healing_particles.xml"/>
				</particles>
			</attack-boost>
			<particles value="true">
				<particle-file path="../../particles/glow_particles.xml"/>
				<particle-file path="../../particles/particle_range.xml">
					<shape value="conical">
						<angle value="90"/>
					</shape>
					<radius value="5"/>
					<min-radius value="4.9"/>
					<direction x="0" y="0.1" z="0"/>
					<offset x="0" y="0" z="0"/>
				</particle-file>
			</particles>
		</skill>

		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/temple.g3d"/>
			<sound enabled="false"/>
			<particles value="true">
				<particle-file path="../../particles/glow_particles.xml"/>
			</particles>
		</skill>

		<skill>
			<type value="upgrade"/>
			<name value="upgrade_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/temple.g3d"/>
			<sound enabled="false"/>
			<particles value="true">
				<particle-file path="../../particles/upgrade_particles.xml" />
				<particle-file path="../../particles/glow_particles.xml"/>
			</particles>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>
			<ep-cost value="0" />
			<speed value="300"/>
			<anim-speed value="300" />
			<animation path="models/temple_die.g3d"/>
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall1.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall2.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall3.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall4.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall5.wav"/>
			</sound>
			<fade value="false"/>
		</skill>

	</skills>

	<!-- *** commands *** -->
	<commands>

		<command>
			<type value="produce"/>
			<name value="produce_priest" />
			<image path="../priest/images/priest.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="priest"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="produce_atlas"/>
			<image path="../atlas/images/atlas.bmp"/>
			<unit-requirements>
				<unit name="priest"/>
			</unit-requirements>
			<upgrade-requirements/>
			<produce-skill value="produce_skill"/>
			<produced-unit name="atlas"/>
		</command>

		<command>
			<type value="upgrade"/>
			<name value="open_pandoras_box"/>
			<image path="../../upgrades/pandoras_box/images/shield1.bmp"/>
			<unit-requirements>
				<unit name="priest"/>
			</unit-requirements>
			<upgrade-requirements>
				<upgrade name="shields"/>
				<upgrade name="weapons"/>
				<upgrade name="helmets"/>
			</upgrade-requirements>
			<upgrade-skill value="upgrade_skill"/>
			<produced-upgrade name="pandoras_box"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="produce_artemis" />
			<image path="../artemis/images/technician.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="artemis"/>
		</command>

	</commands>
</unit>
